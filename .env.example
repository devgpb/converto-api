# Database
DATABASE_URL=postgresql://username:password@localhost:5432/saas_db

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# JWT
JWT_SECRET=your-super-secret-jwt-key

# Server
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:8100

# Email (Nodemailer)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@SEU_DOMINIO.mailgun.org
SMTP_PASS=senha_gerada_no_mailgun
SMTP_FROM="Converto API <no-reply@SEU_DOMINIO.com>"
SMTP_SECURE=false

# Redis
REDIS_URL=redis://localhost:6379

# Supabase Storage (para exportação)
# IMPORTANTE: NÃO usar a URL do Postgres aqui.
# Use a URL do projeto (https://SEU_PROJETO.supabase.co)
BUCKET_URL=https://SEU_PROJETO.supabase.co
SUPABASE_SERVICE_KEY=chave_service_role_ou_server
SUPABASE_BUCKET=exports

# Ambiente de armazenamento (prefixo de pasta): dev | prod
# Se não definido, usa NODE_ENV: production -> prod; caso contrário -> dev
STORAGE_ENV=dev

# TTL em dias para arquivos de exportação
EXPORT_FILE_TTL_DAYS=2

# Intervalo (minutos) para limpeza periódica
CLEANUP_INTERVAL_MINUTES=60
